# MediBot AI Environment Configuration

# Backend Configuration
API_PORT=8000
API_HOST=0.0.0.0
DEBUG=false

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=phi3:mini
OLLAMA_TIMEOUT=30

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=["http://localhost:5173", "https://yourdomain.com"]

# Database Configuration
DATABASE_URL=sqlite:///./medibot.db
DATABASE_POOL_SIZE=10

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/medibot.log

# Medical Configuration
ALERT_THRESHOLDS_CONFIG=configs/medical_thresholds.json
MEDICAL_KNOWLEDGE_PATH=data/medical_chart_knowledge.txt

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=300

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60